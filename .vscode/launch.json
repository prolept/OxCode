// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}", //workspaceRoot
            //first argument beelow can be the folder in the new host ( see https://code.visualstudio.com/docs/extensions/testing-extensions)
            "args": ["--extensionDevelopmentPath=${workspaceFolder}" ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "trace": "all",  
            "outFiles": [ "${workspaceFolder}/out/src/**/*.js" ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [  "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
                "--timeout",
				"999999"],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceFolder}/out/test/**/*.js" ],
            "preLaunchTask": "npm",
             
        },
		{
			"name": "Debug server",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [ "--nolazy" ],
			"program": "${workspaceRoot}/src/debugger/mockDebug.ts",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/**/*.js"
			],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "npm"
			// "preLaunchTask": ["npm","Open TestGdb"]
        }
    ]
}
